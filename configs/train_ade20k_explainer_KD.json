{
    "name": "",
    "n_gpu": 1,
    "method": "train",
    "arch": {
        "type": "LinearLayers",
        "args": {
            "n_in_features": 1200,
            "n_classes": 16,
            "n_hidden_features": [],
            "bias": true
        }
    },
    "dataset": {
        "type": "KDDataset",
        "args": {
            "input_features_path": "data/ade20k/frequency_filtered_one_hot_attributes.pth",
            "labels_path": "saved/PlacesCategoryClassification/0510_102912/ADE20K_predictions/saga/outputs_predictions.pth",
            "out_type": "probabilities"
        }
    },
    "data_loader": {
        "args":{
            "batch_size": 256,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy",
        "per_class_accuracy",
        "precision",
        "recall",
        "f1",
        "predicted_class_distribution"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 1
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/PlacesCategoryClassification/0510_102912/ADE20K_predictions/saga/KD_baseline_explainer/hparam_search",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
