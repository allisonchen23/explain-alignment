{
    "name": "",
    "n_gpu": 1,
    "method": "train",
    "arch": {
        "type": "LinearLayers",
        "args": {
            "n_in_features": 50,
            "n_classes": 10,
            "n_hidden_features": [],
            "bias": true,
            "activation": null
        }
    },
    "dataset": {
        "type": "KDDataset",
        "args": {
            "input_features_path": "saved/cifar10/sift_128_128/50means/histogram_vectors.pth",
            "labels_path": "data/cifar10-processed/cifar10_image_labels.pth",
            "out_type": "predictions"
        }
    },
    "data_loader": {
        "args":{
            "batch_size": 256,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy",
        "per_class_accuracy",
        "precision",
        "recall",
        "f1",
        "predicted_class_distribution"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 1
        }
    },
    "trainer": {
        "epochs": 75,

        "save_dir": "saved/cifar10/resnet18/explainer/sift_descriptor_histogram/cifar128_128/hparam_search",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,
        "save_val_results": true,
        "tensorboard": true
    }
}
